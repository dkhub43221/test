local Window = Rayfield:CreateWindow({
   Name = "DK's Hub | Streetz War 2 | V0.0 [BETA] | " .. executor,
   Theme = customTheme,
   Discord = {Enabled = true, Invite = "Fy7PanRV", RememberJoins = true},
   KeySystem = false
})

local GeneralTab = Window:CreateTab("General", "box")
GeneralTab:CreateSection("Bypass.lmao")

-- Slider fix
GeneralTab:CreateSlider({
    Name = "Amount / 30s",
    Range = {32, 10000},
    Increment = 200,
    Suffix = "",
    CurrentValue = 100,
    Flag = "bypass.lmao",
    Callback = function(Value)
        print("Slider value:", Value)
    end
})

-- Dropdown fix
GeneralTab:CreateDropdown({
    Name = "Method",
    Options = {"None", "Public", "Private"},
    CurrentOption = {"None"},
    MultipleOptions = false,
    Callback = function(option)
        print("Selected:", option[1])
    end
})

-- Loop toggle (no exploit InvokeServer calls)
local ToggleLoop = false

GeneralTab:CreateToggle({
    Name = "Loop Example",
    CurrentValue = false,
    Callback = function(Value)
        ToggleLoop = Value
        if Value then
            task.spawn(function()
                while ToggleLoop do
                    print("Loop running...")
                    task.wait(0.5)
                end
            end)
        end
    end
})
